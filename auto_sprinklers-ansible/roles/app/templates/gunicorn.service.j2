[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory={{ app_folder }}
ExecStart={{ app_django_environment }}/bin/gunicorn --access-logfile - --workers 3 --bind unix:{{ app_folder }}/home.sock home.wsgi:application

[Install]
WantedBy=multi-user.target